    <main>
      {{#if hasProducts }}
        <div class="grid">
          {{#each prods}}
            <article class="card product-item">
              <header class="card-header">
                <h1 class="product-title"> {{this.title}}</h1>
              </header>
              <div class="card-image">
                <img src="https://images.all-free-download.com/images/graphicthumb/nostalgic_books_and_picture_1_166375.jpg">
              </div>
              <div class="card-content">
                <h2 class="product-price">$19.90</h2>
                <p class="product-description">Text text text text</p>
              </div>
              <div class="card-actions">
                <button class="btn">Add to cart</button>
              </div>
            </article>
          {{/each}}
        </div>
      {{ else }}
          <h1 >No product found!</h1>
      {{/if}}
    </main>

